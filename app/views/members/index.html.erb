<h1>Listing members</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th></th>
  </tr>
 
  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.website %></td>
      <td><%= link_to 'Show', member_path(member) %></td>
      <td><%= link_to 'Edit', edit_member_path(member) %></td>
    </tr>
  <% end %>
</table>


