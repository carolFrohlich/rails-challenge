<h1>Friendship#connect</h1>
<p>Find me in app/views/friendship/connect.html.erb</p>


 <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@member.errors.count, "error") %> prohibited
        this member from being saved:
      </h2>
      <ul>
        <% @member.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
 <% end %>

<h3>Add Friendship</h3>
<%= form_with scope: :member, url: members_path, local: true do |form| %>
  <p>
    <%= form.label :first_member %>
    <%= select("name", "member_id", Member.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Select member'}) %>
  </p>
 
  <p>
    <%= form.label :second_member %>
    <%= select("name", "member_id", Member.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Select member'}) %>
  </p>
 
  <p>
    <%= form.submit "Connect members" %>
  </p>
<% end %>